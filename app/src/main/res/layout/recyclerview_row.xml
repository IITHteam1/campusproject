<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_margin="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:padding="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginBottom="8dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/latitude"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""/>

            <TextView
                android:id="@+id/longitude"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/drainageIssueLayout"
            android:background="@drawable/boarder_edittext"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Drainage Issue"/>
            <TextView
                android:layout_marginTop="8dp"
                android:textColor="#757575"
                android:textSize="12sp"
                android:id="@+id/drainageIssueTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="nil"/>
        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="8dp"
            android:id="@+id/electricIssueLayout"
            android:background="@drawable/boarder_edittext"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Electrical Issue"/>
            <TextView
                android:layout_marginTop="8dp"
                android:textColor="#757575"
                android:textSize="12sp"
                android:id="@+id/electricIssueTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="nil"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="8dp"
            android:id="@+id/garbageIssueLayout"
            android:background="@drawable/boarder_edittext"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Garbage Issue"/>
            <TextView
                android:layout_marginTop="8dp"
                android:textColor="#757575"
                android:textSize="12sp"
                android:id="@+id/garbageIssueTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="nil"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="8dp"
            android:id="@+id/otherIssueLayout"
            android:background="@drawable/boarder_edittext"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Other Issue"/>
            <TextView
                android:layout_marginTop="8dp"
                android:textColor="#757575"
                android:textSize="12sp"
                android:id="@+id/otherIssueTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="nil"/>
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/resolved"
            android:layout_gravity="end"
            android:layout_margin="8dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@color/colorAccent"
            android:text="Resolved"/>

    </LinearLayout>




</androidx.cardview.widget.CardView>